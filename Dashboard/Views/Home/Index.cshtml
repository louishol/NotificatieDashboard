@{
    ViewBag.Title = "Home Page";
}
@Scripts.Render("~/bundles/jquery")
<div class="flex-container">

    <div class="flex-item">
        <a class="list-group-item active"><span class="badge"></span>Klanten</a>
        @foreach (var item in ViewBag.customers)
        {
            @Html.ActionLink((String)item.companyName, "Details", "Customer", new { id = item.customerId }, new { @class = "list-group-item" });

        }
    </div>
    <div class="flex-item">
        <a href="/Application/Create" class="list-group-item active"><span class="badge"><p id="newapplication" class="glyphicon glyphicon-plus"></p></span> Applicaties</a>
        @foreach (var item in ViewBag.applications)
        {   
            @Html.ActionLink((String)item.name, "Details", "Application", new { id = item.applicationId}, new { @class = "list-group-item" });
        }
    </div>
    <div class="flex-item">
        <a class="list-group-item active"><span class="badge"></span>Verdeling besturingssystemen  </a>
        <div id="piechart"></div>
    </div>
 
    <div class="flex-item">
        <a href="#" class="list-group-item" style="background-color:lightgreen">
            Onlangs toegevoegde apparaten
        </a>
        @foreach (var item in ViewBag.devices)
        {
            <a href="#" class="list-group-item">@item.operatingSystemVersion - @item.uniqueId <span class="badge">@item.tblApplications.name</span></a>
        }
        
    </div>
    <div class="flex-item">
        <a href="#" class="list-group-item" style="background-color:orange">
            Onlangs toegevoegde crash reports
        </a>
        @foreach (var item in ViewBag.applications)
        {
          <a href="#" class="list-group-item">@item.name</a>
        }
     
    </div>
    <div class="flex-item">
        <a href="#" class="list-group-item active">
            Populaire Applicaties :
        </a>
        @foreach (var item in ViewBag.popularApplications)
        {
            <a href="../Application/Details/@item.applicationId" class="list-group-item"><span class="badge">@item.devices</span>@item.name</a>
        }
    </div>
</div>

<script type="text/javascript">

    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);
    function drawChart() {
        var data = google.visualization.arrayToDataTable([
          ['Task', 'Hours per Day'],
          ['Android', 11],
          ['iOS', 2]

        ]);

        var options = {
           
        };
        var chart = new google.visualization.PieChart(document.getElementById('piechart'));

        chart.draw(data, options);
    }
</script>