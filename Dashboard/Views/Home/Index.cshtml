@{
    ViewBag.Title = "Home Page";
}

<div class="indexheaderphoto"></div>
<div class="statisticsheadertext"> Statistieken</div>

<div class="boxing">
    <div class="statisticstext">@ViewBag.appCount</div>
    <div class="statisticstextunder">Applicaties</div>
</div>

<div class="boxing">
    <div class="statisticstext">@ViewBag.devCount</div>
    <div class="statisticstextunder">Devices</div>
</div>

<div class="boxing">
    <div class="statisticstext">@ViewBag.crashCount</div>
    <div class="statisticstextunder">Crash Reports</div>
</div>


<div class="flex-container">
    <div class="flex-item2">
        <a href="#" class="list-group-item active">
            Laatst gebruikt :


        </a>
    </div>
    <div class="flex-item1">
        <div class="flex-item1" id="piechart" style=""></div>
    </div>
</div>

<div class="flex-container">
    <div class="flex-item1">
        <a href="#" class="list-group-item active">
        Alle applicaties:
        </a>
        @foreach (var item in ViewBag.applications)
        {
            <a href="#" class="list-group-item">@item.name</a>
        }

    </div>
</div>

<script type="text/javascript">
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);
    function drawChart() {

        var data = google.visualization.arrayToDataTable([
          ['Task', 'Hours per Day'],
          ['Work', 11],
          ['Eat', 2],
          ['Commute', 2],
          ['Watch TV', 2],
          ['Sleep', 7]
        ]);
        var chart = new google.visualization.PieChart(document.getElementById('piechart'));

        chart.draw(data);


    }
</script>